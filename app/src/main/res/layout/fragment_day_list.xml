<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <ProgressBar
        android:id="@+id/loading_day"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/label_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/shojumaru"
        android:text="@string/visits_label"
        android:textColor="@color/colorPrimary"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_visits"
        android:name="fr.jbouffard.japan2020.View.PlanHoliday.VisitFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="fr.jbouffard.japan2020.View.PlanHoliday.DayFragment"
        tools:listitem="@layout/fragment_day"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/label_activity"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_overnights"
        android:name="fr.jbouffard.japan2020.View.PlanHoliday.VisitFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="fr.jbouffard.japan2020.View.PlanHoliday.DayFragment"
        tools:listitem="@layout/fragment_day"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/list_visits"
        />
</android.support.constraint.ConstraintLayout>